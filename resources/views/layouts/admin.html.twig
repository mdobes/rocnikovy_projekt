<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{% block title %}Administrace{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="/assets/css.php?admin">
    {% endblock %}

    <script type="text/javascript" src="/assets/javascript.php?admin"></script>
</head>
<body id="page-top">

<nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    <a class="navbar-brand mr-1" href="/admin">Administrace</a>

    <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Navbar -->
    <ul class="navbar-nav ml-auto ml-md-0">

        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user-circle fa-fw"></i> {{ user.username }}
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" href="/login/logout">Odhlásit se</a>
            </div>
        </li>
    </ul>

</nav>

<div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
        <li class="nav-item {% if path == '/admin' %}active{% endif %}">
            <a class="nav-link" href="/admin">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Domů</span>
            </a>
        </li>
        <li class="nav-item {% if path starts with '/admin/posts' %}active{% endif %}">
            <a class="nav-link" href="/admin/posts">
                <i class="fas fa-fw fa-folder"></i>
                <span>Příspěvky</span>
            </a>
        </li>
        {% if user.isSuperAdmin %}
            <li class="nav-item {% if path starts with '/admin/users' %}active{% endif %}">
                <a class="nav-link" href="/admin/users">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Uživatelé</span></a>
            </li>
        {% endif %}
    </ul>
    {% block body %}{% endblock %}
</div>

</body>
</html>
